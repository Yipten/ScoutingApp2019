<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ScoutingApp2019"
             x:Class="ScoutingApp2019.MainPage"
            Title="Scouting App 2019"
            BackgroundColor="LightGray"
            BarBackgroundColor="LimeGreen">
    <ContentPage Title="Start" Padding="10">
        <StackLayout Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="Start">
            <StackLayout Orientation="Horizontal">
                <Label Text="Name" FontSize="24" VerticalOptions="Center"/>
                <Entry x:Name="NameEntry" FontSize="24" Keyboard="Text" WidthRequest="250" VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Match #" FontSize="24" VerticalOptions="Center"/>
                <Entry x:Name="MatchEntry" FontSize="24" Keyboard="Numeric" MaxLength="3" WidthRequest="64" VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Robot #" FontSize="24" VerticalOptions="Center"/>
                <Entry x:Name="RobotNumEntry" FontSize="24" Keyboard="Numeric" MaxLength="4" WidthRequest="64" VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Replay Match?" FontSize="24" VerticalOptions="Center"/>
                <Switch x:Name="ReplaySwitch" IsEnabled="True"/>
            </StackLayout>
        </StackLayout>
    </ContentPage>

    <!-- P A G E 2 SANDSTORM -->
    <ContentPage Title="Sandstorm" Padding="10">
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="SANDSTORM/AUTO DATA ENTRY" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="150">
                <StackLayout Orientation="Vertical" Spacing="5">
                    <Label Text=""></Label>
                </StackLayout>
                <StackLayout Orientation="Vertical" Spacing="35">
                    <!--Ship 1 (Near)-->
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_1_3_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_3_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_1_3_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_3_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_1_3_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_3_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_1_3_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_3_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_1_2_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_2_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_1_2_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_2_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_1_2_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_2_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_1_2_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_2_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_1_1_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_1_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_1_1_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_1_1_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_1_1_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_1_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_1_1_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_1_1_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Vertical" Spacing="35">
                        <!--Cargo-->
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car_" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car_" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat_" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat_" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car_13" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car_14" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat_15" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat_16" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car_17" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car_18" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat_19" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat_20" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car_21" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car_22" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat_23" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat_24" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Spacing="35">
                        <!--Cargo Pt 2-->
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car25" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car26" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat27" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat28" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car29" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car30" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat31" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat32" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car33" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car34" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat35" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat36" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="30">
                            <Entry x:Name="sand_Att_Car37" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Car38" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                            <Entry x:Name="sand_Att_Hat39" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                            <Switch x:Name="sand_Pla_Hat40" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Vertical" Spacing="35">
                    <!--Ship 2 ( Far )-->
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_2_3_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_3_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_2_3_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_3_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_2_3_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_3_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_2_3_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_3_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_2_2_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_2_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_2_2_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_2_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_2_2_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_2_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_2_2_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_2_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Car_Rock_2_1_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_1_L" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Car_Rock_2_1_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Car_Rock_2_1_R" IsEnabled="True" BackgroundColor="Orange" Scale="1.5"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <Entry  x:Name="sand_Att_Hat_Rock_2_1_L" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_1_L" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                        <Entry  x:Name="sand_Att_Hat_Rock_2_1_R" FontSize="24" Keyboard="Numeric" MaxLength="1" WidthRequest="30" VerticalOptions="Center"/>
                        <Switch x:Name="sand_Pla_Hat_Rock_2_1_R" IsEnabled="True" BackgroundColor="Yellow" Scale="1.5"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage>

    <!--P A G E 3 TELEOP-->
    <ContentPage Title="Teleop" Padding="10">
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="TELEOP DATA ENTRY" />
            </StackLayout>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="End Game" Padding="10">
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Words"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Performance" Padding="10">
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Words"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage>
</TabbedPage>
