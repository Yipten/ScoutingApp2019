                    <Label Text="Top Level" FontSize="24" TextColor="White"></Label>
                    <Label Text="Middle Level" FontSize="24" TextColor="White"></Label>
                    <Label Text="Bottom Level" FontSize="24" TextColor="White"></Label>
                </StackLayout>

                <StackLayout Orientation="Vertical" Spacing="100">
                    <!--Rocket 1 ( Far )-->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="Rocket" FontSize="36" VerticalTextAlignment="Center" TextColor="White"/>
                    </StackLayout>
                    <!--Top-->
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cargo" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1TCargoMinus" Text="-"  FontSize="24" Clicked="TeleRock1TCargoMinus_Clicked" WidthRequest="60" HeightRequest="60" TextColor="White" />
                        <Label Text="0" x:Name="teleRock1TCargoTotal"  FontSize="24" VerticalTextAlignment="Center" TextColor="White" />
                        <Button x:Name="teleRock1TCargoPlus" Text="+" FontSize="24" Clicked="TeleRock1TCargoPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>

                        <Label Text="Hatch" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1THatchMinus" Text="-" FontSize="24" Clicked="TeleRock1THatchMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleRock1THatchTotal" FontSize="24" VerticalTextAlignment="Center"  TextColor="White"/>
                        <Button x:Name="teleRock1THatchPlus" Text="+" FontSize="24" Clicked="TeleRock1THatchPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                    </StackLayout>

                    <!--Mid-->
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cargo" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1MCargoMinus" Text="-" FontSize="24" Clicked="TeleRock1MCargoMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleRock1MCargoTotal" FontSize="24" VerticalTextAlignment="Center"  TextColor="White"/>
                        <Button x:Name="teleRock1MCargoPlus" Text="+" FontSize="24" Clicked="TeleRock1MCargoPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>

                        <Label Text="Hatch" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1MHatchMinus" Text="-" FontSize="24" Clicked="TeleRock1MHatchMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleRock1MHatchTotal" FontSize="24" VerticalTextAlignment="Center"  TextColor="White"/>
                        <Button x:Name="teleRock1MHatchPlus" Text="+" FontSize="24" Clicked="TeleRock1MHatchPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                    </StackLayout>

                    <!--Bottom-->
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cargo" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1BCargoMinus" Text="-" FontSize="24" Clicked="TeleRock1BCargoMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleRock1BCargoTotal" FontSize="24" VerticalTextAlignment="Center"  TextColor="White"/>
                        <Button x:Name="teleRock1BCargoPlus" Text="+" FontSize="24" Clicked="TeleRock1BCargoPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>

                        <Label Text="Hatch" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleRock1BHatchMinus" Text="-" FontSize="24" Clicked="TeleRock1BHatchMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleRock1BHatchTotal" FontSize="24" VerticalTextAlignment="Center"  TextColor="White"/>
                        <Button x:Name="teleRock1BHatchPlus" Text="+" FontSize="24" Clicked="TeleRock1BHatchPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Vertical" Spacing="100">
                    <!--Cargo Ship-->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="Cargo Ship" FontSize="36" VerticalTextAlignment="Center" TextColor="White"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cargo" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="tele_ShipCargoMinus" Text="-" FontSize="24" Clicked="Tele_ShipCargoMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleShipCargoTotal" FontSize="24" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleShipCargoPlus" Text="+" FontSize="24" Clicked="TeleCargoShipPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>

                        <Label Text="Hatch" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleShipHatchMinus" Text="-" FontSize="24" Clicked="TeleShipHatchMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleShipHatchTotal" FontSize="24" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleShipHatchPlus" Text="+" FontSize="24" Clicked="TeleShipHatchPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                    </StackLayout>

                    <!--Fails-->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="Dropped" FontSize="36" VerticalTextAlignment="Center" TextColor="White"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cargo" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleFailsCargoMinus" Text="-" FontSize="24" Clicked="TeleFailsCargoMinus_Clicked" WidthRequest="60" HeightRequest="60" TextColor="White" />
                        <Label Text="0" x:Name="teleFailsCargoTotal" FontSize="24" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleFailsCargoPlus" Text="+" FontSize="24" Clicked="TeleFailsCargoPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>

                        <Label Text="Hatch" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleFailsHatchMinus" Text="-" FontSize="24" Clicked="TeleFailsHatchMinus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                        <Label Text="0" x:Name="teleFailsHatchTotal" FontSize="24" VerticalTextAlignment="Center" TextColor="White"/>
                        <Button x:Name="teleFailsHatchPlus" Text="+" FontSize="24" Clicked="TeleFailsHatchPlus_Clicked" WidthRequest="60" HeightRequest="60"  TextColor="White"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage>

    <!--PAGE 4 - ENDGAME & SUBMIT-->
    <ContentPage Title="End Game" Padding="10">
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" Spacing="125">
                <StackLayout Orientation="Vertical" Spacing="100">
                    <Button x:Name="SubmitButton" Text="Submit" FontSize="24" Clicked="SubmitButton_Clicked"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage>
</TabbedPage>
